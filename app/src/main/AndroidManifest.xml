<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lectly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lectly"
        android:usesCleartextTraffic="true">
        <activity android:name=".filesActivity" />
        <activity android:name=".studentMenu" />
        <activity
            android:name=".studentModules"
            android:theme="@style/Theme.Lectly.NoActionBar" />
        <activity
            android:name=".lecturerMenu"
            android:theme="@style/Theme.Lectly.NoActionBar" />
        <activity
            android:name=".lecturerMain"
            android:label="@string/title_activity_lecturer_main"
            android:theme="@style/Theme.Lectly.NoActionBar" />
        <activity
            android:name=".createPost"
            android:theme="@style/Theme.Lectly.NoActionBar" />
        <activity
            android:name=".typeOfUser"
            android:theme="@style/Theme.Lectly.NoActionBar" />
        <activity
            android:name=".RegistrationActivity"
            android:theme="@style/Theme.Lectly.NoActionBar" />
        <activity
            android:name=".studentMain"
            android:theme="@style/Theme.Lectly.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lectly.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>